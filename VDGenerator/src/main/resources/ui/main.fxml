<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="vdgenerator.controller.GeneratorController"
            prefHeight="400.0" prefWidth="600.0">

    <stylesheets>
        <URL value="@styles.css"/>
    </stylesheets>

    <VBox spacing="20" alignment="TOP_LEFT" prefWidth="600.0" prefHeight="400.0" style="-fx-padding: 30;">

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button fx:id="selectInputButton" text="Select HW Folder" onAction="#handleSelectInputFile"/>
            <Label fx:id="selectedInputLabel" text="No file selected" wrapText="true"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button fx:id="selectReferenceButton" text="Select VD Folder" onAction="#handleSelectOutputFile"/>
            <Label fx:id="selectedReferenceLabel" text="No file selected" wrapText="true"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button fx:id="processButton" text="Process and Save" onAction="#handleProcessFile"/>
        </HBox>

    </VBox>
</AnchorPane>


